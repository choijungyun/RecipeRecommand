<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_userchoice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserchoiceActivity">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserchoiceActivity">


    <RadioGroup
        android:layout_width="153dp"
        android:layout_height="269dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/요리종류"
        android:layout_marginTop="75dp">

        <RadioButton
            android:id="@+id/밥"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="77dp"
            android:text="밥" />

        <RadioButton
            android:id="@+id/일품"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/끓이기"
            android:layout_below="@+id/밥"
            android:text="일품" />

        <RadioButton
            android:id="@+id/후식"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/일품"
            android:layout_centerHorizontal="true"
            android:text="후식" />

        <RadioButton
            android:id="@+id/반찬"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_above="@+id/일품"
            android:layout_centerHorizontal="true"
            android:text="반찬" />


        <RadioButton
            android:id="@+id/국"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/일품"
            android:layout_alignStart="@+id/굽기"
            android:text="국 or 찌개" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/끓이기"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/찌기"
        android:layout_marginTop="151dp"
        android:text="끓이기" />

    <CheckBox
        android:id="@+id/찌기"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/볶기"
        android:layout_below="@+id/튀기기"
        android:text="찌기" />

    <CheckBox
        android:id="@+id/볶기"
        android:layout_width="80dp"
        android:layout_height="40dp"


        android:layout_above="@+id/굽기"
        android:layout_alignStart="@+id/굽기"
        android:text="볶기" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/가격"
        android:layout_toEndOf="@+id/가격"
        android:background="@drawable/price" />

    <TextView
        android:id="@+id/가격"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="115dp"

        android:layout_marginLeft="40dp"
        android:text="가격" />

    <TextView
        android:id="@+id/조리방법"
        android:layout_width="62dp"
        android:layout_height="40dp"

        android:layout_alignStart="@+id/끓이기"
        android:layout_alignTop="@+id/요리종류"
        android:text="조리방법" />


    <ImageView
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/조리방법"
        android:layout_toEndOf="@+id/조리방법"
        android:background="@drawable/method" />




    <CheckBox
        android:id="@+id/튀기기"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/끓이기"
        android:layout_below="@+id/끓이기"
        android:text="튀기기" />


    <CheckBox
        android:id="@+id/굽기"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="205dp"
        android:layout_marginEnd="83dp"
        android:text="굽기" />


    <CheckBox
        android:id="@+id/기타"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/굽기"
        android:layout_marginBottom="166dp"
        android:text="기타" />


    <ImageView
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/요리종류"
        android:layout_marginStart="101dp"
        android:background="@drawable/type" />


    <TextView
        android:id="@+id/요리종류"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="76dp"
        android:text="요리종류" />

    <Button
        android:id="@+id/완료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/shape"
        android:text="완료" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/price"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:max = "30000"
        android:layout_marginBottom="104dp" />

    <TextView
        android:id="@+id/pricerange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/완료"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:text="원" />




</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

